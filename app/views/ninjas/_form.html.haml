- @ninja.persisted? ? url = clan_ninja_path(@clan, @ninja) : url = clan_ninjas_path(@clan)
= form_for @ninja, url: url do |f|
  - if @ninja.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ninja.errors.count, "error")} prohibited this ninja from being saved:"
      %ul
        - @ninja.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :tw
    = f.text_field :tw
  .field
    = f.label :fb
    = f.text_field :fb
  .field
    = f.label :in
    = f.url_field :in
  .field
    = f.label :x
    = f.text_field :x
  .field
    = f.label :y
    = f.text_field :y
  .field
    = f.label :desc
    = f.text_field :desc
  .field
    = f.hidden_field :clan_id, value: @clan
  .actions
    = f.submit 'Save'
